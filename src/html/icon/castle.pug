mixin flag(x, y)
  g(transform=`translate(${x} ${y})`, fill="white", stroke-width="0.02")
    polygon.windvane( points= "0,-.5 0.2,-0.4 0 -0.3")
    line( x1=0 x2=0 y1=0 y2=-.5)

mixin walls
  path( d="M 0 5 h 1 v -2 l 2 -2 l 2 2 v 1 h 2 v -1 l 2 -2 l 2 2 v 2 h 1", 
        stroke-width="0.06", 
        fill="#eee"
      )
      
mixin ground
  rect( x="0", width="12", y="5", height="1", fill="#ddd", stroke="none")

+ground
+walls
+flag(3,1)
+flag(9,1)
