mixin flag(x,y)
  path( d= `M ${x} ${y} v -0.5 l 0.2 0.1 l -0.2 0.1`, stroke-width="0.03")

mixin walls
  path( d="M 0 5, h 1, v -2, l 2 -2, l 2 2, v 1, h 2, v -1, l 2 -2, l 2 2, v 2, h 1", stroke-width="0.06", fill="#eee")

mixin ground
  rect( x="0", width="12", y="5", height="1", fill="#ddd", stroke="none")

svg( viewBox="0 -1 12 7" stroke="black" fill="none")
  +ground
  +walls
  +flag(3,1)
  +flag(9,1)
