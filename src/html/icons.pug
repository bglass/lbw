.icon
  svg( viewBox="-5 -5 110 110" )
    if shape == "socket"
      g(fill = "none" stroke-width="5")
        rect(   x="0" y="0" rx="20" ry="20" width="100" height="100" stroke = "black")
        circle( cx="50" cy="50" r="25" stroke = "black")
        circle( cx="40" cy="50" r="5" fill= "black")
        circle( cx="60" cy="50" r="5" fill= "black")

    else if shape == "bulb"
      - r0 = 20; d = 10; cx = 50; cy = 50;
      - r1 = r0+d; r2=50;
      - sr = 1.414
      - sr1 = r1/sr; sr2 = r2/sr;

      g( stroke="black" stroke-width="5" )
        circle( cx=cx cy=cy r=r0 fill="none" )
        line( x1 = cx-r1   y1 = cy      x2 = cx-r2   y2 = cy     )
        line( x1 = cx+r1   y1 = cy      x2 = cx+r2   y2 = cy     )
        line( x1 = cx      y1 = cy+r1   x2 = cx      y2 = cy+r2  )
        line( x1 = cx-sr1  y1 = cy+sr1  x2 = cx-sr2  y2 = cy+sr2 )
        line( x1 = cx+sr1  y1 = cy+sr1  x2 = cx+sr2  y2 = cy+sr2 )
